<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FXController">
   <bottom>
      <HBox alignment="center">
         <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
         </padding>
         <Button fx:id="button" alignment="center" onAction="#startCamera" text="Start Camera" />
      </HBox>
   </bottom>
   <center>
		<ImageView fx:id="currentFrame" fitHeight="480" fitWidth="640" pickOnBounds="true" preserveRatio="true" />
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Controls" />
            <CheckBox fx:id="grayscale" mnemonicParsing="false" text="Show in grayscale">
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox mnemonicParsing="false" fx:id="haarClassifier" onAction="#haarSelected" text="Haar Classifier">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </CheckBox>
            <CheckBox mnemonicParsing="false" fx:id="lbpClassifier" onAction="#lbpSelected" text="LBP Classifier">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </CheckBox>
         </children>
      </VBox>
   </right>
</BorderPane>
